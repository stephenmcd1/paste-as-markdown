{
  "name": "Paste as Markdown",
  "version": "1.0.0",
  "manifest_version": 2,
  
  "description": "Converts formatted text into Markdown syntax when pasting",
  
  "author": "Stephen McDaniel",
  
  "homepage_url": "https://github.com/stephenmcd1/paste-as-markdown",
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "64": "icons/icon-64.png",
    "128": "icons/icon-128.png"
    "256": "icons/icon-256.png",
  },

  "permissions": [
    "https://trello.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://trello.com/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ]
}